<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <ImageView
        android:id="@+id/back_ground_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/v_code_up_image"
        android:layout_marginTop="-70dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Coed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/wright"
        android:layout_marginTop="-55dp"
        android:layout_below="@+id/back_ground_up"/>

    <ImageView
        android:id="@+id/wright"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/back_ground_up"
        android:layout_marginTop="-50dp"
        android:src="@drawable/wright"/>

    <ImageView
        android:id="@+id/vibration_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/vibration"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/wright"/>

    <TextView
        android:id="@+id/phone_no_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the verification\ncode sent to 0000000000"
        android:layout_toRightOf="@+id/vibration_img"
        android:layout_below="@+id/wright"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/vibration_img"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp"
        app:strokeColor="#148F77"
        app:strokeWidth="@dimen/cardview_compat_inset_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/et_otp1"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_otp2"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:layout_toRightOf="@+id/et_otp1"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_otp3"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:layout_toRightOf="@+id/et_otp2"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_otp4"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:layout_toRightOf="@+id/et_otp3"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_otp5"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:layout_toRightOf="@+id/et_otp4"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_otp6"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:gravity="center"
                android:cursorVisible="false"
                android:layout_alignParentRight="true"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:background="@drawable/edit_text_box"
                android:textSize="20sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>