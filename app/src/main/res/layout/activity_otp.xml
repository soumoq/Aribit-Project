<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <ImageView
        android:id="@+id/back_ground_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:src="@drawable/v_code_up_image" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Verification Coed"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_ground_up"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-55dp"
        android:layout_toRightOf="@+id/wright"
        android:text="Confirmation"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/wright"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/back_ground_up"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/wright" />

    <ImageView
        android:id="@+id/vibration_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/wright"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/vibration" />

    <TextView
        android:id="@+id/phone_no_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wright"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/vibration_img"
        android:text="Please enter the verification\ncode sent to 0000000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otp_card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/vibration_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="5dp"
        app:strokeColor="#029688"
        app:strokeWidth="@dimen/cardview_compat_inset_shadow"
        tools:ignore="PxUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4.0">

            <com.chaos.view.PinView
                android:id="@+id/pin_view"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="number"
                app:itemHeight="60dp"
                app:itemRadius="5dp"
                app:itemSpacing="10dp"
                app:itemWidth="60dp"
                app:lineColor="#029688"
                app:lineWidth="1dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.example.arobitproject.MyKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" />


</RelativeLayout>